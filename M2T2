Goal: A correct looking receipt that handles sales tax
Assumption sales tax is 8% (varies by county)
*/

#include <iostream>
#include <iomanip> // for setprecision
using namespace std;

int main() {
    // Making receipt printer for a restaurant.
    // Declare variables
    string meal_name = "Lasagna";
    int num_meals;
    double meal_price = 5.99;
    double sub_total;
    double tax_rate = 0.08;
    double tip_amount;
    double tax_amount;
    double total_price;

    // Get user input
    cout << "Welcome to the CSC 134 Restaurant!" << endl;
    cout << "Today's Special: " << meal_name << endl;
    cout << endl;
    cout << "How much would you like? ";
    cin >> num_meals;
    cout << "Tip amount? (min 0)? ";
    cin >> tip_amount;
    
    // Do the calculation
    sub_total = meal_price * num_meals;
    tax_amount = sub_total * tax_rate; //This much is added to the bill
    // add tax and tips
    total_price = sub_total + tip_amount + tax_amount;


    // Present the output with 2 decimal places for money
    cout << setprecision(2) << fixed; // set the decimal places to 2 for money
    cout << endl;
    cout << "YOUR ORDER" << endl << "-----------------------------" << endl;
    cout << num_meals << " x " << meal_name << "\t$" << meal_price << endl;
    cout << "Subtotal: \t\t$" << sub_total << endl;
    cout << "Tip: \t\t\t$" << tip_amount << endl;
    cout << "Tax: \t\t\t$" << tax_amount << endl;
    cout << "-----------------------------" << endl;
    cout << "Total: \t\t\t$" << total_price << endl;
    cout << "THANK YOU COME AGAIN!" << endl;

    return 0; // no errors
}
